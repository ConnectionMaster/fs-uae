os = @OS_NAME@
host_cpu = @HOST_CPU@

ifneq ($(findstring x86_64,${host_cpu}),)
nfd_arch = x64
else
nfd_arch = x86
endif

all:
ifeq (${os},linux)
	make -C build/gmake_linux_zenity nfd config=release_${nfd_arch}
	@cp -u build/lib/Release/${nfd_arch}/libnfd.a ..
endif

clean:
	rm -Rf build/bin build/lib build/obj
